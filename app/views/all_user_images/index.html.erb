<% @all_user_images.each do |image| %>
  <div class="text-center bg-white mx-auto max-w-sm shadow-lg rounded-lg overflow-hidden" style="margin-top: 40px">
    <div class="block h-16 sm:h-24 rounded-full mx-auto mx-4 sm:mx-0 sm:mr-4 sm:ml-0" style="width: 80px; height: 100px; padding-bottom: 10px"><%= image_tag image.photo %>
    </div>   
    
    <div class="text-center sm:text-left sm:flex-grow">
      <div class="mb-4" style="margin-top: 40px">
        <p class="text-xl leading-tight"><%= image.user.email %></p>
        <p class="text-sm leading-tight text-grey-dark"><%= image.text %></p>
      </div>
    </div>
  </div>
<% end %>